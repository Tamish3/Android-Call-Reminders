<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ic_launcher_background"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:title="Call Your Mother"
        app:title="Update Contact"
        app:titleTextColor="#FFFFFF" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Time From Last Call"
        android:textSize="35dp"
        />
    <Spinner
        android:id="@+id/updatespinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/updatecustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Remind me every: " />

    <LinearLayout
        android:id="@+id/updatecustom_layout"
        android:layout_width="match_parent"
        android:layout_height="480dp">

        <EditText
            android:id="@+id/updateyears"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Y" />

        <EditText
            android:id="@+id/updatemonths"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M" />

        <EditText
            android:id="@+id/updateweeks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="W" />

        <EditText
            android:id="@+id/updatedays"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="D" />

        <EditText
            android:id="@+id/updatehours"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="h" />

        <EditText
            android:id="@+id/updateminutes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="m" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <Button
            android:id="@+id/updatecancelButton"
            android:layout_width="fill_parent"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/cancel_string" />
        <Space
            android:layout_width="fill_parent"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/updatedeleteButton"
            android:layout_width="fill_parent"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Delete" />
        <Space
            android:layout_width="fill_parent"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/updatesubmitButton"
            android:layout_width="fill_parent"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/submit_string" />

    </LinearLayout>
</LinearLayout>